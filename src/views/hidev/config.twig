package:
{% if init.type %}
    type:           {{ init.type }}
{% endif %}
    name:           {{ init.package }}
{% if init.namespace %}
    namespace:      {{ init.namespace }}
{% endif %}
{% if init.headline %}
    headline:       {{ init.headline }}
{% endif %}
{% if init.title %}
    title:          {{ init.title }}
{% endif %}
{% if init.keywords %}
    keywords:       {{ init.keywords }}
{% endif %}
{% if init.license %}
    license:        {{ init.license }}
{% endif %}
{% if init.year %}
    year:           {{ init.year }}
{% endif %}
{% if init.description %}
    description:    {{ init.description }}
{% endif %}
{% if not init.novendor %}

vendor:
    name:           {{ init.vendor }}
{% if init.author and init.email %}
    authors:
        {{ init.nick }}:
            name:       {{ init.author }}
            email:      {{ init.email }}
{% endif %}
{% endif %}
{% if init.plugins %}

plugins:
{% for plugin, version in init.plugins %}
    {{ "%-23s"|format(plugin ~ ':') }} "{{ version|raw }}"
{% endfor %}
{% endif %}
