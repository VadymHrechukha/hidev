#!/usr/bin/env php
<?php

// TODO refactor it all

use Dotenv\Dotenv;

(function () use ($argc, $argv) {

    if ($argc<1) {
        die("usage deploy.php .env.name [command]\n");
    }

    array_shift($argv);
    $deployer = new Deployer(array_shift($argv));
    $command = array_shift($argv);
    $deployer->call($command);
})();
